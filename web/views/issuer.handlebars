<div class="mt-5 mx-auto">
    <h1 class="mb-5 text-center">Issuer</h1>

    <div class="text-center col-4 mx-auto mb-5"><img class="img-fluid" src="{{issuer.imageURL}}"></div>

    <table class="table mb-5">
        <tr class="d-flex">
            <th class="col-3">Name</th>
            <td class="col-9">{{{issuer.name}}}</td>
        </tr>
        <tr class="d-flex">
            <th class="col-3">Description</th>
            <td class="col-9">{{{issuer.description}}}</td>
        </tr>
        <tr class="d-flex">
            <th class="col-3">Website URL</th>
            <td class="col-9">{{issuer.url}}</td>
        </tr>
        
    </table>

    <h2 class="text-center mb-3">Badge Classes</h2>

    <p class="text-center mb-5">
        <a class="btn btn-success" href="/AddBadgeClass/{{issuer.entityId}}">Add a Badge Class</a>
    </p>

    <div class="row mb-5">
        {{#each badgeClasses}}
            <div class="card col-4">
                <img class="card-img-top" src="{{this.imageURLPrefix}}/image/{{this.imageFileName}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/BadgeClass/{{this.entityId}}" class="btn btn-primary">View Details</a>
                </div>
            </div>
        {{/each}}
    </div>
        

    
</div>

        